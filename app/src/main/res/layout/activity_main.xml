<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".flow_operators.MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_startCountDown"
        android:layout_marginTop="40dp"
        android:text="btn start count down"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11"
        android:id="@+id/txt"
        android:textSize="20sp"
        android:textColor="#C60303"
        android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_stateflow"
        android:layout_marginTop="40dp"
        android:text="btn stateflow"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="txt state flow"
        android:id="@+id/txt_stateflow"
        android:textSize="20sp"
        android:textColor="#C60303"
        android:layout_marginTop="10dp" />


</LinearLayout>